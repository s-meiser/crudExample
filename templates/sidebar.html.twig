    <section class="mb-2 pt-0 col-md-12 bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-left">

                    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                                </li>
                                {% if app.user.username is defined %}
                                    {% if app.user.username == 'admin' %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{path('app_admin')}}">Dashboard</a>
                                    </li>
                                    {% endif %}
                                {% endif %}
                            </ul>
                            {% if app.user %}
                                <a class="btn btn-outline-light" href="{{ path('app_logout') }}">Logout</a>
                            {% else %}

                                <link rel="stylesheet" type="text/css" href="{{ asset('css/loginModal.css') }}">

                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#exampleModal">
                                    Sign in
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">


                                            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto ">
                                                <div class="card card-signin my-5 border border-grey">
                                                    <div class="card-body">

                                                        {% if app.user %}

                                                            <div class="mb-3">
                                                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                                            </div>

                                                        {% else %}


                                                            <h5 class="card-title text-center">Sign In</h5>

                                                            <form action="{{ path('app_login')}}" class="form-signin" method="post">

                                                                <div class="form-label-group">
                                                                    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                                                                    <label for="inputUsername">Username</label>
                                                                </div>

                                                                <div class="form-label-group">
                                                                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                                                                    <label for="inputPassword">Password</label>
                                                                </div>
                                                                <input type="hidden" name="_csrf_token"
                                                                       value="{{ csrf_token('authenticate') }}"
                                                                >
                                                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>

                                                            </form>

                                                        {% endif %}


                                                    </div>
                                                </div>
                                            </div>



                                        </div>
                                    </div>
                                </div>
                                {#<a href="{{ path('app_login') }}">Sign in</a>#}
                            {% endif %}
                        </div>
                    </nav>

                </div>
            </div>
        </div>
    </section>
